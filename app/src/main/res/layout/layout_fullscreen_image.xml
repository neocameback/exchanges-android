<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#CC000000">

  <RelativeLayout style="@style/Layout.FillWidth"
                  android:id="@+id/rlFullScreen"
                  android:layout_centerInParent="true">

    <android.support.v4.view.ViewPager
        android:id="@+id/pagerFullScreen"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="@dimen/button_size_xxhuge"
        android:background="@color/app_primary_color"/>

    <com.pendulab.theExchange.widget.CirclePageIndicator
        android:id="@+id/indicatorFullScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/margin_padding_small"/>
  </RelativeLayout>

</RelativeLayout>