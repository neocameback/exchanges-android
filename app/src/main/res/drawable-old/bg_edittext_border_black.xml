       android:width="1dp"
       android:color="@color/red">

  <stroke
      android:width="0.5dp"
      android:color="@color/black"/>

  <padding
      android:bottom="@dimen/margin_padding_small"
      android:left="@dimen/margin_padding_small"
      android:right="@dimen/margin_padding_small"
