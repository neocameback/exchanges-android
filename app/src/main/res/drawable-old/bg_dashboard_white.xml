<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item>
    <layer-list>
      <item>
        <shape>
          <solid android:color="@color/divider"/>
          <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"
                   android:topLeftRadius="0dp" android:topRightRadius="0dp"/>
        </shape>
      </item>
      <item android:top="0.5dp" android:bottom="0.5dp">
        <shape>
          <solid android:color="@color/white"/>

          <padding android:bottom="@dimen/margin_padding_normal"
                   android:left="@dimen/margin_padding_normal"
                   android:right="@dimen/margin_padding_normal"
                   android:top="@dimen/margin_padding_normal"/>

          <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"
                   android:topLeftRadius="0dp" android:topRightRadius="0dp"/>
        </shape>
      </item>
    </layer-list>

  </item>

