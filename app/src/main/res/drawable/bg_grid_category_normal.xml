<?xml version="1.0" encoding="UTF-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:id="@+id/shape_my"
       android:width="1dp"
       android:color="@color/black">

  <stroke
      android:width="@dimen/border_width_tiny"
      android:color="@color/item_border"/>

  <padding
      android:bottom="@dimen/margin_padding_small"
      android:left="@dimen/margin_padding_small"
      android:right="@dimen/margin_padding_small"
      android:top="@dimen/margin_padding_small"/>

  <corners
      android:bottomLeftRadius="@dimen/margin_padding_small"
      android:bottomRightRadius="@dimen/margin_padding_small"
      android:topLeftRadius="@dimen/margin_padding_small"
      android:topRightRadius="@dimen/margin_padding_small"/>

  <solid android:color="@color/white"/>

</shape>